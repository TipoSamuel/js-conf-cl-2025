---
interface Props {
  title: string
  body: string
  horizontal?: boolean
}

const { title, body, horizontal } = Astro.props;
---

<div class="info-card" class:list={horizontal ? 'horizontal' : ''}>
  <h3>{title}</h3>
  <p>{body}</p>
</div>
<style>
  .info-card {
    background-color: #0c0a09;
    border: 1px solid #292524;
    border-radius: 0.5rem;
    padding: 1.5rem;
    gap: 1rem;

    h3 {
      margin: 0 0 1rem;
    }

    & p {
      color: #78716c;
      line-height: 1.25;
      margin: 0;
    }

    &.horizontal {
      display: flex;
    }
  }
</style>
